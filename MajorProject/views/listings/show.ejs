<% layout('layouts/boilerplate') %>
<br>
<br>
<div class="row mt-3 container">
    <div class="col-8 offset-3">
        <h3 class="mt-3"><%=listing.title%></h3>
    </div>
    <div class="card col-6 offset-3 show-cards">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body mt-3">
            <p class="card-text"> 
                <%= listing.description %><br>
                &#8377 <%= listing.price != null ? listing.price.toLocaleString() : "Price not available" %> / night<br>
                <%= listing.location %><br>
                <%= listing.country %><br>
            </p>
        </div>
    </div>

    <div class="btns">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark offset-3 edit-btn">Edit
        </a>

        <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
            <button type="submit" class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <div class="reveiw">
        <hr> 
        <H1> Leave a Reveiw </H1>
        <form class="mt-3 mb-3">
            <div class="mt-3 mb-3">
               <label for="rating" class="form-label">Rating</label>
               <input class="form-control" type="range" max="5" min="1" id="rating" name="reveiw[rating]"> 
            </div>
             
            <div class="mt-3 mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name= "reveiw[comment]"type="text" cols=100 rows=5></textarea>
            </div>

            <button class="btn btn-outline-dark" type="submit"> Submit</button>
        </form>
    </div>
</div>

