<% layout('layouts/boilerplate') %>
<br>
<br>
<div class="row mt-3 container">
    <div class="col-8 offset-3">
        <h3 class="mt-3">Listing Details :</h3>
    </div>
    <div class="card col-6 offset-3 show-cards">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body mt-3">
            <p class="card-text"> 
                <b><%=listing.title%></b><br>
                <%= listing.description %><br>
                &#8377 <%= listing.price != null ? listing.price.toLocaleString() : "Price not available" %> / night<br>
                <%= listing.location %><br>
                <%= listing.country %><br>
            </p>
        </div>
    </div>

    <div class="btns">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark offset-3 edit-btn">Edit
        </a>

        <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
            <button type="submit" class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
</div>
<br>
<br>
